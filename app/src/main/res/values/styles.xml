<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleViewForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="StyleLabelForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="StyleTextViewForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_8dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="StyleButtonPesquisar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_64dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_8dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8dp</item>
        <item name="android:text">@string/pesquisar</item>
    </style>

</resources>


